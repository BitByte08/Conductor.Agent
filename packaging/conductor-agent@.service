[Unit]
Description=Conductor Agent (instance %i)
After=network.target

[Service]
# Running as root by default; if you prefer a dedicated user, create it and set User= and Group= accordingly.
WorkingDirectory=/var/lib/conductor/%i
Environment="HOME=/var/lib/conductor/%i"
ExecStart=/usr/local/bin/conductor-agent
Restart=on-failure
RestartSec=5
# Resource limits
LimitNOFILE=65536
# Basic sandboxing
PrivateTmp=true
ProtectSystem=full
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
